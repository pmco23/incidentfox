{
  "mcpServers": {
    "incidentfox": {
      "command": "uv",
      "args": [
        "--directory",
        "./mcp-servers/incidentfox",
        "run",
        "incidentfox-mcp"
      ],
      "env": {
        "KUBECONFIG": "${KUBECONFIG:-~/.kube/config}",
        "AWS_REGION": "${AWS_REGION:-us-east-1}",
        "AWS_DEFAULT_REGION": "${AWS_DEFAULT_REGION:-us-east-1}"
      }
    }
  }
}
