# Slack Bot Token (xoxb-...)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Slack App Token for Socket Mode (xapp-...)
SLACK_APP_TOKEN=xapp-your-app-token

# Slack Signing Secret (for HTTP mode only, not needed for Socket Mode)
SLACK_SIGNING_SECRET=your-signing-secret

# SRE Agent URL (default: http://localhost:8000)
SRE_AGENT_URL=http://localhost:8000

# Enable snapshot recording for local testing/debugging (true/false, default: false)
# Set to "true" locally to capture investigation data for replay testing
ENABLE_SNAPSHOTS=true

