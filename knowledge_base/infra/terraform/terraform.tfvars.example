# Copy this file to terraform.tfvars and fill in values

aws_region  = "us-west-2"
aws_profile = "playground"
environment = "production"

# VPC ID (leave empty to auto-detect)
vpc_id = ""

# ECS resources - increase if tree loading is slow
cpu    = 2048  # 2 vCPU
memory = 8192  # 8 GB

# Number of tasks
desired_count = 1

# OpenAI API key - uses existing secret from AI Agent service
# openai_secret_arn = "arn:aws:secretsmanager:us-west-2:103002841599:secret:ai-agent-openai-key-production-ioanzg"

# Default tree to load
default_tree = "mega_ultra_v2"

# Enable CloudWatch metrics
enable_metrics = true

