# Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=incidentfox_config
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_SSLMODE=disable

# For RDS tunnel (when using SSM port forwarding)
DATABASE_URL_TUNNEL=postgresql+psycopg2://postgres:password@localhost:5433/incidentfox_config?sslmode=require

# Security
TOKEN_PEPPER=generate-with-openssl-rand-base64-32
ADMIN_TOKEN=generate-with-openssl-rand-base64-32

# Column-level encryption (generate with: python scripts/generate-encryption-key.py)
ENCRYPTION_KEY=generate-with-python-scripts-generate-encryption-key-py

# Optional: Observability
LMNR_PROJECT_API_KEY=your-laminar-api-key

# Optional: Cache
CONFIG_CACHE_BACKEND=memory
# CONFIG_CACHE_BACKEND=redis
# REDIS_URL=redis://localhost:6379/0

# Application
LOG_LEVEL=INFO
